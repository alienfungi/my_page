.panel.panel-default
  .panel-heading
    = link_to friendship.user do
      = content_tag :h3, friendship.user.username, class: "panel-title"
  .panel-body
    .container
      .row
        = link_to friendship.user do
          = gravatar_for friendship.user, size: 100, class: "img-thumbnail"
      .row
        .btn-group.pull-right
          = link_to "Message", new_message_path(recipient: friendship.friend_id), class: "btn btn-primary"
          = link_to 'Approve', friendships_path(user_id: friendship.user), method: :post, type: 'button', class: 'btn btn-success'
          = link_to 'Reject', "#reject_modal_#{friendship.user_id}", type: 'button', class: 'btn btn-danger', data: {toggle: 'modal'}

.modal.fade{id: "reject_modal_#{friendship.user_id}", role: 'dialog', aria: {hidden: true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: "modal"}, aria: {hidden: true}} &times;
        = content_tag :h4, "Reject #{friendship.user.username}", class: 'modal-title'
      .modal-body
        = content_tag :p, "Are you sure you would like to reject #{friendship.user.username}'s request?"
      .modal-footer
        = link_to "Reject", friendship_path(friendship), method: :delete, class: "btn btn-primary"
        %button.btn.btn-default{data: {dismiss: "modal"}} Cancel
