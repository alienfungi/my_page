- target = friendship.user == current_user ? :friend : :user
.panel.panel-default
  .panel-heading
    = link_to friendship.friend do
      = content_tag :h3, friendship.friend.username, class: "panel-title"
  .panel-body
    .container
      .row
        = link_to friendship.friend do
          = gravatar_for friendship.friend, size: 100, class: "img-thumbnail"
      .row
        .btn-group.pull-right
          = link_to "Message", new_message_path(recipient: friendship.friend_id), class: "btn btn-primary"
          = link_to 'Cancel Request', friendship_path(friendship), method: :delete, class: 'btn btn-danger'

.modal.fade{id: "cancel_modal_#{friendship.friend_id}", role: 'dialog', aria: {hidden: true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: "modal"}, aria: {hidden: true}} &times;
        = content_tag :h4, "Cancel request to #{friendship.friend.username}", class: 'modal-title'
      .modal-body
        = content_tag :p, "Are you sure you would like to cancel your friend request to #{friendship.friend.username}?"
      .modal-footer
        = link_to "Cancel Request", friendship_path(friendship), method: :delete, class: "btn btn-primary"
        %button.btn.btn-default{data: {dismiss: "modal"}} Maintain Request
