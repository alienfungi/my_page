= f.hidden_field :sender_id, value: current_user.id

= f.input :recipient_identifier, label: "Recipient", input_html: { value: (@recipient || "") }

= f.input :subject, input_html: { autofocus: !@recipient.blank? }

= f.input :message, as: :text

= f.submit "Send Message", class: "btn btn-primary btn-block"
