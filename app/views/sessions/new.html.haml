.container
  = form_for(:session, url: sessions_path, html: { class: 'form-signin' }) do |f|
    %h1.form-signin-heading Login
    = f.text_field :email, class: 'form-control', placeholder: 'Email', autofocus: true
    = f.password_field :password, class: 'form-control', placeholder: 'Password'
    %br
    = link_to "New User", new_user_path
    %br
    %br
    = f.submit "Login", class: "btn btn-lg btn-primary btn-block"

%br
