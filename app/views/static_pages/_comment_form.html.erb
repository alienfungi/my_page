<%= form_for @comment, html: { onsubmit: "return validate_comment();" } do |f| %>

  <h2>Comments</h2>
  
  <table>
    <tr>
      <td>
        <%= f.label :name, "Name*" %><br/>
        <%= f.text_field :name %><br/>
        <div id="name_error" class="errorMessage"></div>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.label :email, "Email*" %><br/>
        <%= f.text_field :email %><br/>
        <div id="email_error" class="errorMessage"></div>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.label :message %><br/>
        <%= f.text_area :message, rows: 7%>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.submit "Submit"%>
      </td>
    </tr>
  </table>

<% end %>