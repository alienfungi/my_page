<%= form_for(@comment) do |f| %>

	<h2>Comments</h2>
	
	<table>
		<tr>
			<td>
				<%= f.label :name %><br/>
				<%= f.text_field :name %>
			</td>
		</tr>

		<tr>
			<td>
				<%= f.label :email %><br/>
				<%= f.text_field :email %>
			</td>
		</tr>

		<tr>
			<td>
				<%= f.label :message %><br/>
				<%= f.text_area :message, rows: 7%>
			</td>
		</tr>

		<tr>
			<td>
				<%= f.submit "Submit" %>
			</td>
		</tr>
	</table>

<% end %>