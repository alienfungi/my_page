- provide :title, 'Users'

- content_for :header do
  .row
    %h1.col-sm-8.col-md-9 Users
    = form_tag({}, method: "get", class: "form-inline col-sm-4 col-md-3", role: "form") do
      %table
        %tr
          %td
            = text_field_tag :search_for, "", class: "form-control", autofocus: true
          %td
            %label{for: 'search_submit', class: 'btn btn-primary'}
              %span.glyphicon.glyphicon-search
            %input{class: 'hidden', type: 'submit', name: 'commit', id: 'search_submit'}

- content_for :sidebar do
  = render 'sidebar'

= render @users
.pull-right
  = will_paginate @users

