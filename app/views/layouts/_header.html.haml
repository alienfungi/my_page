.navbar.navbar-inverse.navbar-fixed-top
  .container
    %button{class: "navbar-toggle", type: "button", data: {target: ".navbar-collapse", toggle: "collapse"}}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-header
      = link_to "Zane's Site", root_path, class: "navbar-brand"
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        - @header_links.each do |text, path|
          = content_tag :li, link_to(text, path), class: (current_page?(path) ? 'active' : '')
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to('Login', login_path)

